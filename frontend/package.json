{
  "name": "glitter-graphix",
  "version": "0.0.1",
  "main": "dist/index.js",
  "author": "Viihna Lehraine",
  "license": "GNU GPLv3",
  "type": "module",
  "scripts": {
    "build": "pnpm build:ts && pnpm build:sass",
    "build:sass": "sass src/styles/main.scss src/styles/main.css",
    "build:ts": "rm -rf ./dist && vite build && mkdir -p ./dist/assets && cp -r ./assets/* ./dist/assets/",
    "clean": "rm -rf node_modules dist && pnpm cache clean*",
    "dev": "vite",
    "format": "prettier --write \"**/*.{ts,js,json,css,md,html}\"",
    "lint": "eslint --ext .ts ts/",
    "lint:fix": "eslint --fix --exit .ts ts/",
    "reinit": "rm -rf node_modules && pnpm install",
    "test": "pnpm test:full",
    "test:full": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm watch:ts && pnpm watch:sass && pnpm watch:test",
    "watch:sass": "sass --watch src/styles/main.scss:src/styles/main.css",
    "watch:test": "vitest --watch",
    "watch:ts": "tsc --watch"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "source-map-support": "^0.5.21",
    "tslib": "^2.8.1"
  }
}
